{
  "name": "ai-text-enhancer",
  "version": "1.0.0",
  "description": "AI-powered text enhancement desktop app",
  "author": {
    "name": "hamdi mokni",
    "email": "hamdimokni712@gmail.com"
  },
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && tsc -p tsconfig.main.json && ELECTRON_DISABLE_SANDBOX=1 NODE_ENV=development electron .",
    "dev:electron:linux": "wait-on http://localhost:5173 && tsc -p tsconfig.main.json && ELECTRON_DISABLE_SANDBOX=1 NODE_ENV=development electron .",
    "dev:linux": "concurrently \"npm run dev:vite\" \"npm run dev:electron:linux\"",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "axios": "^1.7.7",
    "diff": "^5.2.0",
    "electron-store": "^8.1.0",
    "framer-motion": "^11.11.17",
    "lodash": "^4.17.21",
    "openai": "^4.73.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "robotjs": "^0.6.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.9",
    "@types/lodash": "^4.17.0",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.0.1",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.textenhancer.app",
    "productName": "AI Text Enhancer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
